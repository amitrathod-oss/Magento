<?xml version="1.0"?>
<!--
/**
 * Sigma CustomLink Admin System Configuration
 *
 * @category  Sigma
 * @package   Sigma_CustomLink
 */
-->
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <section id="catalog" translate="label" type="text" sortOrder="40" showInDefault="1" showInStore="1" showInWebsite="1">
            <group id="custom_navigation_link" translate="label comment" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Custom Navigation Links</label>
                <comment><![CDATA[Add custom links to the main navigation menu. Configure multiple links with individual settings.]]></comment>
                <field id="enabled" translate="label comment" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enable Custom Menu Links</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                    <comment>Enable or disable all custom navigation menu links</comment>
                </field>
                <field id="links" translate="label comment" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Navigation Links</label>
                    <frontend_model>Sigma\CustomLink\Block\Adminhtml\Form\Field\Links</frontend_model>
                    <backend_model>Sigma\CustomLink\Model\Config\Backend\Links</backend_model>
                    <comment><![CDATA[Add, edit, or remove custom navigation links. Each link can have its own title, URL, position, and behavior settings.]]></comment>
                    <depends>
                        <field id="enabled">1</field>
                    </depends>
                </field>
            </group>
        </section>
    </system>
</config>
