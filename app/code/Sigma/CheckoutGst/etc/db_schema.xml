<?xml version="1.0"?>
<!--
/**
 * Sigma CheckoutGst Database Schema
 *
 * @category  Sigma
 * @package   Sigma_CheckoutGst
 */
-->
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    
    <!-- Add company_gst_no column to quote table -->
    <table name="quote" resource="checkout" comment="Sales Flat Quote">
        <column xsi:type="varchar" name="company_gst_no" nullable="true" length="50" comment="Company GST Number"/>
    </table>
    
    <!-- Add company_gst_no column to sales_order table -->
    <table name="sales_order" resource="sales" comment="Sales Order">
        <column xsi:type="varchar" name="company_gst_no" nullable="true" length="50" comment="Company GST Number"/>
    </table>
    
    <!-- Add company_gst_no column to sales_order_grid table -->
    <table name="sales_order_grid" resource="sales" comment="Sales Order Grid">
        <column xsi:type="varchar" name="company_gst_no" nullable="true" length="50" comment="Company GST Number"/>
    </table>
    
</schema>
